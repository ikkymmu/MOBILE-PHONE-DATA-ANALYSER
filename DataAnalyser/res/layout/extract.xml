<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.buttons.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Button
        android:id="@+id/CallHistory"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dip"
        android:background="@drawable/button_1"
        android:textColor="@android:color/white"
        android:text="Call History"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:onClick="CallHistory">
    </Button>
    
    <Button
        android:id="@+id/Incoming"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/button_1"
        android:textColor="@android:color/white"
        android:text="Incoming SMS"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/CallHistory"
        android:layout_marginBottom="20dip"
        android:onClick="Incoming">
    </Button>
    
    <ProgressBar
        	android:id="@+id/progressbar_view"
       	 	style="?android:attr/progressBarStyle"
       	 	android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Outgoing"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/button_1"
        android:textColor="@android:color/white"
        android:text="Outgoing SMS"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Incoming"
        android:layout_marginBottom="20dip"
        android:onClick="Outgoing">
    </Button>
    
    <Button
        android:id="@+id/Contacts"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dip"
        android:background="@drawable/button_1"
        android:textColor="@android:color/white"
        android:text="Contacts"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Outgoing"
        android:onClick="Contacts">
    </Button>
    
    <Button
        android:id="@+id/back"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_1"
        android:textColor="@android:color/white"
        android:layout_below="@id/Contacts"
        android:text="Back" 
        android:onClick="backtomain">
    </Button>

</RelativeLayout>
